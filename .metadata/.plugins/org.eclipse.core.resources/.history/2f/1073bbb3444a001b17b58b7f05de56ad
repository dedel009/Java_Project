package project1230;
import java.util.*;

public class Car extends Color{
	private String brand;
	private String color;
	private String tire;
	
	public Car(String brand, String color, String tire) {
		this.brand = brand;
		this.color = color;
		this.tire = tire;
	}
	
	public void car_Color(Car car) {
		Scanner sc = new Scanner(System.in);
		for(String color: car.getCarColor()) {
			System.out.print(color+" ");
		}
		System.out.println("중 색을 고르시오.");
		car.color = sc.next();
		System.out.println(car.color+" 선택!");
	}
	
	

}
