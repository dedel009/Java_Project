package project1230;
import java.util.*;

public class User {
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		boolean turn = true;
		System.out.println("[1]키기 [2]끄기");
		int num = sc.nextInt();
		switch(num) {
		case 1:
			turn = true;
			break;
		case 2:
			turn = false;
			break;
			default:
				System.out.println("에러");
				break;
		}
		SmartPhone sp = new SmartPhone(turn);
		while(turn) {
			
		}
		
	}
}
