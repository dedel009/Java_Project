package project1229;
import java.util.*;

public class ATM_2 {
	private int atm_menu;
	private int money = 0;
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		ATM_2 user = new ATM_2();


		atm:while(true) {
			System.out.println("[1]입금 [2]출금 [3]조회 [4]종료");
			user.atm_menu = sc.nextInt();
			switch(user.atm_menu) {
			case 1:
				input_money(user);
				break;
			case 2:
				output_money(user);
				break;
			case 3:
				System.out.println("금액 조회: "+money);
				break;
			case 4:
				System.out.println("종료");
				break atm;
			}
		}
	}
	
	public int getAtm_menu() {
		return atm_menu;
	}

	public void setAtm_menu(int atm_menu) {
		this.atm_menu = atm_menu;
	}

	public int getMoney() {
		return money;
	}

	public void setMoney(int money) {
		this.money = money;
	}

	public static void input_money(ATM_2 user) {
		Scanner sc = new Scanner(System.in);
		System.out.println("입금 금액: ");
		int input_money = sc.nextInt();
		user.money += input_money;
		System.out.println("현재 금액: "+user.money);
	}
	
	public static void output_money(ATM_2 user) {
		Scanner sc = new Scanner(System.in);
		System.out.println("출금 금액: ");
		int output_money = sc.nextInt();
		user.money -= output_money;
		System.out.println("현재 금액: "+user.money);
	}

}
